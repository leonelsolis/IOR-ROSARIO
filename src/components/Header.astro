<style>
  header {
    background: white;
    padding: 1rem 0;
    color: black;
    border-bottom: 1px solid;
    border-image: linear-gradient(to right, rgba(0,0,0,0.3), rgba(0,0,0,0.1)) 1;
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  nav {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 1rem;
  }

  .brand {
    width: 150px;
    min-width: 100px;
    text-decoration: none;
    color: black;
  }

  .brand img {
    width: 150%;
    height: auto;
    display: block;
  }

  ul {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  ul li a {
    text-decoration: none;
    color: black;
    font-size: 1rem;
    font-weight: 500;
    transition: opacity 0.2s ease;
    white-space: nowrap;
  }

  ul li a:hover {
    opacity: 0.6;
  }

  .btn-turnos {
    background: white;
    padding: 0.6rem 1.2rem;
    border: 2px solid black;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.2s ease;
  }

  .btn-turnos:hover {
    background: black;
    color: white;
  }

  /* Hamburger Menu - Hidden by default */
  .hamburger {
    display: none;
    flex-direction: column;
    gap: 6px;
    cursor: pointer;
    background: none;
    border: none;
    padding: 0;
  }

  .hamburger span {
    width: 25px;
    height: 3px;
    background: black;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .hamburger.active span:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(8px, -8px);
  }

  .mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: white;
    border-bottom: 1px solid #e0e0e0;
    padding: 1rem;
    flex-direction: column;
    gap: 0.75rem;
  }

  .mobile-menu.active {
    display: flex;
  }

  .mobile-menu a {
    text-decoration: none;
    color: black;
    font-weight: 500;
    padding: 0.75rem 0;
  }

  .mobile-menu .btn-turnos {
    width: 100%;
    text-align: center;
    background: black;
    color: white;
    border: none;
    padding: 0.75rem;
  }

  .mobile-menu .btn-turnos:hover {
    background: #333;
  }

  /* Tablet (768px to 1024px) */
  @media (max-width: 1024px) {
    .brand {
      width: 120px;
    }

    ul {
      gap: 1.5rem;
    }

    ul li a {
      font-size: 0.95rem;
    }

    .btn-turnos {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
  }

  /* Mobile (less than 768px) */
  @media (max-width: 768px) {
    nav {
      padding: 0 1rem;
    }

    .brand {
      width: 100px;
    }

    ul {
      display: none;
    }

    .hamburger {
      display: flex;
    }

    .mobile-menu {
      padding: 1rem 0;
    }

    .mobile-menu a {
      padding: 1rem;
      border-bottom: 1px solid #f0f0f0;
    }

    .mobile-menu a:last-child {
      border-bottom: none;
    }
  }

  /* Small Mobile (less than 480px) */
  @media (max-width: 480px) {
    header {
      padding: 0.75rem 0;
    }

    nav {
      padding: 0 0.75rem;
    }

    .brand {
      width: 80px;
    }

    .hamburger span {
      width: 22px;
      height: 2.5px;
    }

    .mobile-menu {
      padding: 0.75rem 0;
    }

    .mobile-menu a {
      padding: 0.75rem 1rem;
      font-size: 0.95rem;
    }
  }
</style>

<header>
  <nav>
    <a href="/" class="brand"><img src="/Logo-IOR.svg" alt="Instituto de Oncología"> </a>

    <ul>
      <li><a href="/">Inicio</a></li>
      <li><a href="/servicios">Servicios</a></li>
      <li><a href="/contacto">Contacto</a></li>
      <li><a href="https://turnos.hnader.com.ar/oncologia" target="_blank" class="btn-turnos">Turnos online</a></li>
    </ul>

    <button class="hamburger" id="hamburger" aria-label="Menú">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </nav>

  <div class="mobile-menu" id="mobileMenu">
    <a href="/">Inicio</a>
    <a href="/servicios">Servicios</a>
    <a href="/contacto">Contacto</a>
    <a href="https://turnos.hnader.com.ar/oncologia" target="_blank" class="btn-turnos">Turnos online</a>
  </div>
</header>

<script>
  const hamburger = document.getElementById('hamburger');
  const mobileMenu = document.getElementById('mobileMenu');

  if (hamburger && mobileMenu) {
    hamburger.addEventListener('click', () => {
      hamburger.classList.toggle('active');
      mobileMenu.classList.toggle('active');
    });

    const links = mobileMenu.querySelectorAll('a');
    links.forEach(link => {
      link.addEventListener('click', () => {
        hamburger.classList.remove('active');
        mobileMenu.classList.remove('active');
      });
    });
  }
</script>

