<style>
  header {
    background: white;
    padding: 1rem 0;
    color: black;
    border-bottom: 1px solid;
    border-image: linear-gradient(to right, rgba(0,0,0,0.3), rgba(0,0,0,0.1)) 1;
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  }

  nav {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 1rem;
    position: relative;
  }

  .brand {
    width: 140px;
    text-decoration: none;
    color: black;
    display: inline-block;
  }

  /* Desktop menu */
  ul {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  ul li a {
    text-decoration: none;
    color: black;
    font-size: 1rem;
    transition: 0.2s ease;
  }

  ul li a:hover {
    opacity: 0.6;
  }

  .btn-turnos {
    background: white;
    padding: 0.5rem 1rem;
    border: solid 1px black;
    border-radius: 25px;
    text-decoration: none;
  }

  /* Hamburger toggle (hidden by default) */
  .nav-toggle {
    display: none;
  }

  .hamburger {
    display: none;
    width: 32px;
    height: 32px;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border-radius: 6px;
  }

  .hamburger span,
  .hamburger span::before,
  .hamburger span::after {
    display: block;
    background: #111;
    height: 2px;
    width: 18px;
    border-radius: 2px;
    position: relative;
    transition: all 0.2s ease;
  }

  .hamburger span::before,
  .hamburger span::after {
    content: '';
    position: absolute;
    left: 0;
  }

  .hamburger span::before { top: -6px; }
  .hamburger span::after { top: 6px; }

  /* Responsive: mobile styles */
  @media (max-width: 768px) {
    .brand { width: 300px; }

    .hamburger { display: flex; }

    ul { display: none; }

    /* When toggle checked, show full-width dropdown under header */
    .nav-toggle:checked + .hamburger .open-indicator { transform: rotate(45deg); }

    .nav-toggle:checked + .hamburger span { background: transparent; }
    .nav-toggle:checked + .hamburger span::before { transform: translateY(6px) rotate(45deg); }
    .nav-toggle:checked + .hamburger span::after { transform: translateY(-6px) rotate(-45deg); }

    .nav-toggle:checked ~ ul {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: white;
      padding: 1rem 1.25rem;
      box-shadow: 0 8px 28px rgba(0,0,0,0.12);
      border-radius: 0;
      min-width: auto;
      z-index: 999;
      align-items: center;
    }

    .nav-toggle:checked ~ ul li { padding: 0.5rem 0; width: 100%; text-align: center; }

    .nav-toggle:checked ~ ul li a { display: block; color: #111; font-size: 1.1rem; }

    /* Make the Turnos button look good in the full-width bar */
    .nav-toggle:checked ~ ul li .btn-turnos { background: #111; color: #fff; border-color: #111; padding: 0.6rem 1.1rem; }
  }
</style>

<header>
  <nav>
    <a href="/"><img src="/Logo-IOR.svg" alt="IOR logo" class="brand"> </a>

    <!-- Checkbox toggle (pure CSS) -->
    <input id="nav-toggle" class="nav-toggle" type="checkbox" aria-hidden="true" />
    <label for="nav-toggle" class="hamburger" aria-label="Abrir menÃº" role="button" tabindex="0">
      <span class="open-indicator"></span>
    </label>

    <ul>
      <li><a href="/">Inicio</a></li>
      <li><a href="/servicios">Servicios</a></li>
      <li><a href="/contacto">Contacto</a></li>
      <li><a href="https://turnos.hnader.com.ar/oncologia" target="_blank" class="btn-turnos">Turnos online</a></li>
    </ul>
  </nav>
</header>
